<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">
    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        	android:src="@drawable/photo"
        	android:layout_marginLeft="-400dp"/>
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout android:id="@+id/profil"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/bg_photo_profil"
		        android:layout_marginTop="10dp">
		        <ImageView android:id="@+id/profile_picture"
		            android:layout_width="80dp"
		            android:layout_height="80dp"
		            android:layout_centerInParent="true"
		            android:src="@drawable/coeur"/>
		    </RelativeLayout>
		    <LinearLayout android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_marginTop="40dp"
		        android:layout_marginLeft="5dp">
		        <LinearLayout android:layout_width="wrap_content"
		            android:layout_height="wrap_content">
		            <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="REMI"
	                    android:textSize="16dp"
	                    android:textColor="@color/orange"/>
		            <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="BARDOUX"
	                    android:textSize="16dp"
	                    android:textColor="@color/orange"
	                    android:layout_marginLeft="5dp"/>
		        </LinearLayout>
		        <LinearLayout android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp">
		            <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="PARIS"
	                    android:textSize="10dp"
	                    android:textColor="@color/gris_texte"/>
		            <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text=","
	                    android:textSize="10dp"
	                    android:textColor="@color/gris_texte"/>
		            <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="FRANCE"
	                    android:textSize="10dp"
	                    android:textColor="@color/gris_texte"
	                    android:layout_marginLeft="5dp"/>
		        </LinearLayout>
		    </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp">
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_profil"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_amis"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/gris_texte"/>
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_amis"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_profil"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_photos"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/gris_texte"/>
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_photos"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp">
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_profil"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_moments"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/gris_texte"/>
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_events"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_profil"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMING SOON"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_badges"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/gris_texte"/>
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_badges"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp">
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_profil"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMING SOON"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_stats"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/gris_texte"/>
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_stats"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_profil"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_infos"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/gris_texte"/>
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_infos"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
